# AGStock Configuration
# セキュリティ強化版 - 個人利用設定

# ==========================================
# 基本設定
# ==========================================
DEBUG=False
ENVIRONMENT=personal  # 個人利用モード
LOG_LEVEL=INFO

# ==========================================
# API Keys - セキュア管理
# ==========================================
# APIキーは必ず環境変数で設定してください
# リポジトリに絶対にコミットしないでください

# Gemini APIキー (https://aistudio.google.com/)
AGSTOCK_GEMINI_API_KEY=

# OpenAI APIキー (https://platform.openai.com/)
AGSTOCK_OPENAI_API_KEY=

# 楽天APIキー (必要な場合)
RAKUTEN_API_KEY=

# ==========================================
# セキュリティ設定
# ==========================================
# セキュリティモード (strict/normal/lenient)
AGSTOCK_SECURITY_MODE=strict

# レート制限 (リクエスト/分)
AGSTOCK_RATE_LIMIT_PER_MINUTE=60

# 最大データサイズ (MB)
AGSTOCK_MAX_DATA_SIZE_MB=100

# 入力検証有効化
AGSTOCK_ENABLE_INPUT_VALIDATION=true

# 監査ログ有効化
AGSTOCK_ENABLE_AUDIT_LOG=true

# ==========================================
# Database（個人利用 - SQLite）
# ==========================================
DATABASE_URL=sqlite:///data/agstock.db
# PostgreSQLは個人利用では不要
# REDIS_URL=redis://localhost:6379  # オプション

# ==========================================
# 暗号化設定
# ==========================================
# 個人利用のため基本設定のみ
SECRET_KEY=your-secret-key-here-change-this
ENCRYPTION_KEY=your-encryption-key-here-32-bytes

# ==========================================
# Trading Settings（個人設定）
# ==========================================
PAPER_TRADING=True  # 最初はペーパートレードで
AUTO_TRADING_ENABLED=False  # 自動取引は慎重に
MAX_POSITION_SIZE=0.10  # ポートフォリオの10%まで
MAX_DAILY_TRADES=10  # 1日の取引上限

# ==========================================
# Risk Management（個人のリスク許容度）
# ==========================================
MAX_RISK_PER_TRADE=0.02  # 1取引あたり2%まで
MAX_PORTFOLIO_RISK=0.10  # ポートフォリオ全体で10%まで
STOP_LOSS_PCT=0.02  # 損切り2%
TAKE_PROFIT_PCT=0.04  # 利確4%

# ==========================================
# 通知設定
# ==========================================
ENABLE_NOTIFICATIONS=True
NOTIFICATION_EMAIL=your-email@example.com

# LINE通知 (オプション)
AGSTOCK_LINE_TOKEN=

# Discord通知 (オプション)
AGSTOCK_DISCORD_WEBHOOK_URL=

# ==========================================
# パフォーマンス最適化
# ==========================================
# 非同期処理有効化
AGSTOCK_ASYNC_PROCESSING=true

# 最大同時リクエスト数
AGSTOCK_MAX_CONCURRENT_REQUESTS=10

# キャッシュTTL (秒)
AGSTOCK_CACHE_TTL_SECONDS=300

# バッチサイズ
BATCH_SIZE=100

# 最大ワーカー数
MAX_WORKERS=4

# 従来のキャッシュ設定 (互換性)
CACHE_TTL=3600  # 1時間キャッシュ

# ==========================================
# UI Settings（個人の好み）
# ==========================================
DEFAULT_THEME=dark  # ダークモード
AUTO_REFRESH=False  # 自動更新（お好みで）
CHART_STYLE=candlestick  # チャートスタイル

# ==========================================
# Data Settings（個人利用）
# ==========================================
DEFAULT_PERIOD=1y  # デフォルト分析期間
DEFAULT_INTERVAL=1d  # デフォルト時間足
MAX_TICKERS=100  # 同時分析銘柄数上限

# ==========================================
# モニタリング設定
# ==========================================
# メモリ閾値 (MB)
AGSTOCK_MEMORY_THRESHOLD_MB=1024

# 応答時間閾値 (ミリ秒)
AGSTOCK_RESPONSE_TIME_THRESHOLD_MS=5000

# ヘルスチェック有効化
AGSTOCK_ENABLE_HEALTH_CHECKS=true

# 本格的監視 (オプション)
# SENTRY_DSN=
# PROMETHEUS_PORT=9090

# ==========================================
# Backup（個人データ保護）
# ==========================================
AUTO_BACKUP=True  # 自動バックアップ有効
BACKUP_INTERVAL=daily  # 毎日バックアップ
BACKUP_RETENTION=30  # 30日分保持
